<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zestworks.blogger.ui.compose.Composer
            android:id="@+id/text_editor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Enter your content"
            app:layout_constraintBottom_toTopOf="@id/editor_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/editor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bold_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_bold_black_24dp" />

                <ImageButton
                    android:id="@+id/italic_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_italic_black_24dp" />

                <ImageButton
                    android:id="@+id/underline_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_underlined_black_24dp" />


                <ImageButton
                    android:id="@+id/strike_through_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_strikethrough_s_black_24dp" />

                <ImageButton
                    android:id="@+id/left_alignment"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_align_left_black_24dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/center_alignment"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_align_center_black_24dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/right_alignment"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/tool_button_size"
                    android:layout_height="@dimen/tool_button_size"
                    android:layout_margin="@dimen/tool_button_margin"
                    android:src="@drawable/ic_format_align_right_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blog_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/blog_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="Choose the blog where you want to publish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/blog_list_recyler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blog_list_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>